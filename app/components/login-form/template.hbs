<div id="loginForm">
  {{#if loginError}}
    <div class="login-err alert alert-error">Bad deets dude.</div>
  {{/if}}

  {{input
    value=identification
    placeholder="identification"
    class="username-field"}}

  {{input
    type="password"
    placeholder="password"
    value=password
    class="password-field"}}

  <a href="/login" {{action "login"}}>
    Login
  </a>
</div>
