<div id="loginForm">
  {{#if loginError}}
    <div class="login-err alert alert-error">Bad deets dude.</div>
  {{/if}}

  {{input
    value=identification
    placeholder="identification"
    class="username-field"}}
  {{input
    type="password"
    placeholder="password"
    value=password
    class="password-field"}}
  <a href="/login"
     class="login-btn btn btn-primary"
     {{action "login"}}>
    Login
  </a>
</div>
